<!DOCTYPE html>
<html>
<head>
  <title>InstantShare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if notice %>
	<div id = "notice">
		<p class="notice"><%= notice %></p>
	</div>
	<% elsif alert %>
	<div id = "notice">
    	<p class="alert"><%= alert %></p>
	</div>
	<% end %>
<nav class="navbar navbar-default navbar-fixed-top" style = "border-bottom-color:#ff5f2e;border-bottom-width:thick">
  <div class="container-fluid">
    <div class="navbar-header">
      <a id = "logo" class="navbar-brand" href="/posts">InstantShare</a>
    </div>
    
    <ul class="nav navbar-nav" style = "float:right">

      <% if user_signed_in? %>
      <li><%= link_to 'New Post', new_post_path, id: "nav-text" %></li>
      <li><%= link_to "My Profile", userprofile_path, id: "nav-text" %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, id: "nav-text" %></li>
      <% else %>
      <li><%= link_to "Sign In", new_user_session_path, id: "nav-text"%></li>
      <li><%= link_to "Sign Up", new_user_registration_path, id: "nav-text"%></li>
      <% end %>

    </ul>
  </div>
</nav>
	

<%= yield %>
<script>
$(document).ready(function(){
	setTimeout(function(){
		$("#notice").fadeOut("slow",function(){
			$("this").remove();
		})
	},1000);
});
</script>
</body>
</html>
